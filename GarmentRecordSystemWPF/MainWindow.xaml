<Window x:Class="GarmentRecordSystemWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GarmentRecordSystemWPF"
        mc:Ignorable="d"
        Title="Garment Record System" Height="450" Width="800" ResizeMode ="NoResize"
        Background="{DynamicResource MainWindowBackgroudBrush}">
    <Grid>
        <Button Content="Load" Width="80" Height="30"
                VerticalAlignment="Top" HorizontalAlignment="Left"
                Margin="30 30 0 0"
                Style="{StaticResource ButtonStyle}" />
        <Button Content="Save" Width="80" Height="30"
                VerticalAlignment="Top" HorizontalAlignment="Left"
                Margin="130 30 0 0"
                Style="{StaticResource ButtonStyle}" />
        <Button Content="Exit" Width="80" Height="30"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Margin="0 30 30 0"
                Style="{StaticResource ButtonStyle}" />
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Top"
                   Fill="Black" Height="4" 
                   Margin="0 85 0 0" />
    </Grid>
</Window>
